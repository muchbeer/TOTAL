<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vehicleForm"
            type="raum.muchbeer.total.model.vehicle.VehiclesData" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#BC9253"
        app:cardCornerRadius="12dp"
        app:cardElevation="5dp"
        app:contentPadding="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/item_image"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"

                android:background="@drawable/ic_baseline_person_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_title"
                android:layout_toEndOf="@+id/item_image"
                android:layout_toRightOf="@+id/item_image"
                android:layout_alignParentTop="true"
                android:textSize="25dp"
                tools:text="George Msope"
                android:text="@{vehicleForm.vehicle_number}"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_address"
                tools:text="Kinyerezi mtaba"
                android:textSize="20dp"
                android:layout_toEndOf="@+id/item_image"
                android:layout_toRightOf="@+id/item_image"
                android:layout_below="@+id/item_title"
                android:text="@{vehicleForm.reg_date}"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hideStatus"
                android:layout_below="@+id/item_address"
                android:textSize="25dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark"/>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>